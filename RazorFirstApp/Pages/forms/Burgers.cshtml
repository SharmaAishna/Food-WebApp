<div class="text-center">
    <div class="main-text">
        <h1 class="display-4 text-capitalize text-black">Our great selection of Burgers</h1>
        <h4 >Choose one, or try our selection of Burgers!</h4>
        <h4 >Then order and done!</h4>
        <p class="smallText">Only one pizza per order</p>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 row makeyourownDiv">
                    <div class="col-4">
                        <img src="~/Images/FastDeliveryBurger.png" class="w-100"/>
                    </div>
                    <div class="col-8 align-items-center">
                        <div class="align-middle makeyourownText">
                            <h3 style="text-align:left;">Create your Burger</h3>
                            <p style="text-align:left;">Add your own toppings with our maker</p>
                            <a class="btn btn-primary" style="float:left;" asp-area="" asp-page="~/forms/CustomBurgers">Try Now</a>   
                        </div>
                    </div>
                </div>
            </div>
           
                @foreach(var Burger in Model.FakeDB)
                {
                var ImagePath = "~/Images" + (Burger.ImageTitle + ".png");
                <div class="col-4 mb-5">
                <img src="@ImagePath" class="w-100" asp-append-version="true" />
                <a class="btn btn-primary mt-1" asp-area="" asp-page="Checkout/checkout" asp-route-ImageTitle="@Burger.ImageTitle" asp-route-BurgerPrice="@Burger.BurgerPrice" >Get this Burger</a>
                </div>
                } 
        </div>
    </div>
</div>